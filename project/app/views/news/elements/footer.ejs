<% include ./../helper/category-footer%>
<% include ./../helper/format-time%>
<% include ./../helper/social-link%>


<%
const uploadPath = '/uploads/article/'
const url = `/${systemConfigs.prefixNews}/`;

const cleanedURL = url.replace(/\/+/g, '/');

%>
<footer>
    <div class="bg2 p-t-40 p-b-25">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 p-b-20">
                    <div class="size-h-3 flex-s-c">
                        <a href="index.html">
                            <img class="max-s-full" src="/frontend/images/icons/logo-02.png" alt="LOGO">
                        </a>
                    </div>

                    <div>
                        <p class="f1-s-1 cl11 p-b-16">
                            <%=configInfo[0].info.content%>
                        </p>

                        <p class="f1-s-1 cl11 p-b-16">
                            Any questions? Call us on <%=configInfo[0].info.phone%>
                        </p>

                        <div class="p-t-15">
                            <%- socialLinkHelper(configInfo) %>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-4 p-b-20">
                    <div class="size-h-3 flex-s-c">
                        <h5 class="f1-m-7 cl0">
                            Popular Posts
                        </h5>
                    </div>

                    <ul>
                        <% itemsMostPopular.forEach((item, index) => { %>
                        <li class="flex-wr-sb-s p-b-20">
                            <a href="<%=cleanedURL%>blog-detail/<%= item.id%>" class="size-w-4 wrap-pic-w hov1 trans-03">
                                <img src="<%= uploadPath + item.thumb%>" alt="<%=item.name%>">
                            </a>

                            <div class="size-w-5">
                                <h6 class="p-b-5">
                                    <a href="<%=cleanedURL%>blog-detail/<%= item.id%>" class="f1-s-5 cl11 hov-cl10 trans-03">
                                        <%=item.name%>
                                    </a>
                                </h6>

                                <span class="f1-s-3 cl6">
                                    <%- formatTimeHelper (item.created.time) %>
                                </span>
                            </div>
                        </li>
                        <% }) %>
                    </ul>
                </div>

                <div class="col-sm-6 col-lg-4 p-b-20">
                    <div class="size-h-3 flex-s-c">
                        <h5 class="f1-m-7 cl0">
                            Category
                        </h5>
                    </div>

                    <ul class="m-t--12">
                        <%- categoryFooterHelper(cleanedURL, countArticlesInCategory)%>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="bg11">
        <div class="container size-h-4 flex-c-c p-tb-15">
            <span class="f1-s-1 cl0 txt-center">
                <%=configInfo[0].info.copyright%> 

