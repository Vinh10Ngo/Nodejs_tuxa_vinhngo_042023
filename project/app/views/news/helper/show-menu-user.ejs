<%
showMenuUser = (userInfo) => {
    const linkLogin = systemConfigs.prefixNews + '/auth/login'
    const linkLogout = systemConfigs.prefixNews + '/auth/logout'
    const linkAdmin = systemConfigs.prefixAdmin + '/dashboard'
    xtmlMenuUser = ''
    if(Object.keys(userInfo).length > 0) {
        xtmlMenuUser = `
        <a href="/${linkLogout}" class="left-topbar-item">
            Log out
        </a>`
        if(userInfo.username == 'phucvinh') {
            xtmlMenuUser +=  `
            <a href="/${linkAdmin}" class="left-topbar-item">
                Admin Control Panel
            </a>`
        }
    } else {
        xtmlMenuUser = `
        <a href="/${linkLogin}" class="left-topbar-item">
            Log in
        </a>`
    }
    return xtmlMenuUser
}
%>
