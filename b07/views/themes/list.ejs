<% include ./../helper/status-filter%>
<% include ./../helper/action%>
<% include ./../helper/status%>
<% include ./../helper/hightlight%>
<% include ./../helper/pagination%>

<h3><%- locals.flash %></h3>


<section class="content">
    <div class="container-fluid">
        <!-- Search & Filter -->
        <div class="card card-info card-outline">
            <div class="card-header">
                <h6 class="card-title">Search &amp; Filter</h6>
                <div class="card-tools">
                    <a href="/<%= systemConfigs.prefixAdmin%>/themes/all" class="btn btn-tool"><i class="fas fa-sync"></i></a>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-between">
                    <div class="mb-1">
                        <!-- Filter Status -->
                        <%- filterStatusHelper('themes', statusFilter, keyword) %>    
                    </div>
                    <div class="mb-1">
                        <select id="filter_special" name="filter_special" class="custom-select custom-select-sm mr-1" style="width: unset">
                            <option value="default" selected="">- Select Special -</option>
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select><select id="filter_category" name="filter_category" class="custom-select custom-select-sm mr-1" style="width: unset">
                            <option value="default" selected="">- Select Category -</option>
                            <option value="1">Bà mẹ - Em bé</option>
                            <option value="2">Chính Trị - Pháp Lý</option>
                            <option value="3">Công Nghệ Thông Tin</option>
                            <option value="4">Giáo Khoa - Giáo Trình</option>
                            <option value="5">Học Ngoại Ngữ</option>
                            <option value="6">Khoa Học - Kỹ Thuật</option>
                            <option value="7">Kiến Thức Tổng Hợp</option>
                            <option value="8">Lịch Sử</option>
                            <option value="9">Nông - Lâm - Ngư Nghiệp</option>
                            <option value="10">Tham Khảo</option>
                            <option value="11">Thường Thức - Gia Đình</option>
                            <option value="12">Tâm Lý - Giới Tính</option>
                            <option value="13">Tôn Giáo - Tâm Linh</option>
                            <option value="14">Văn Hóa - Địa Lý - Du Lịch</option>
                            <option value="15">Y Học</option>
                            <option value="16">Kinh Tế</option>
                            <option value="17">Kỹ Năng Sống</option>
                            <option value="18">Thiếu Nhi</option>
                            <option value="19">Truyện Tranh - Manga - Comic</option>
                            <option value="20">Tạp chí - Catalogue</option>
                            <option value="21">Từ Điển</option>
                            <option value="22">Điện Ảnh - Nhạc - Họa</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <form action="/<%= systemConfigs.prefixAdmin%>/themes/<%=currentStatus%>">
                            <div class="input-group">
                                <input type="text" class="form-co  ntrol form-control-sm" name="keyword" value="<%= keyword%>" style="min-width: 300px">
                                <div class="input-group-append">
                                    <a href="/<%= systemConfigs.prefixAdmin%>/themes/all"><button type="button" class="btn btn-sm btn-danger" id="btn-clear-search">Clear</button></a>
                                    <button type="submit" class="btn btn-sm btn-info" id="btn-search"> Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- List -->
        <div class="card card-info card-outline">
            <div class="card-header">
                <h4 class="card-title">List</h4>
                <div class="card-tools">
                    
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
               
                <!-- List Content -->
                <form action="" method="post" class="table-responsive" id="zt-form">

                     <!-- Control -->
                     <%- actionHelper('themes') %> 
                    <table class="table table-bordered table-hover text-nowrap btn-table mb-0">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="check-all">
                                        <label for="check-all" class="custom-control-label"></label>
                                    </div>
                                </th>
                                <th class="text-center">ID</th>
                                <th class="">Name</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Ordering</th>        
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

							<% items.forEach((item, index) => { %>	
								<tr>
									<td class="text-center">
										<div class="custom-control custom-checkbox">
											<input class="custom-control-input" type="checkbox" id="checkbox-<%- item.id%>" name="cid" value="<%= item.id%>">
											<label for="checkbox-<%- item.id%>" class="custom-control-label"></label>
										</div>
									</td>
									<td class="text-center"><%= index +1 %></td>
									<td class="text-wrap" style="min-width: 180px"><%- hightlightHelper(item.name, keyword) %></td>
									</td>
									<td class="text-center position-relative">
										<%- statusHelper('themes', item.status, item.id)%>

									</td>
									
									<td class="text-center position-relative"><input type="number" value="<%= item.ordering%>" class="ordering form-control form-control-sm m-auto text-center" style="width: 65px" id="chkOrdering[1]" data-id="1" min="1"></td>
									
									<td class="text-center">
										<a href="/<%= systemConfigs.prefixAdmin%>/themes/form/<%= item.id%>" class="rounded-circle btn btn-sm btn-info" title="Edit">
											<i class="fas fa-pencil-alt"></i>
										</a>
	
										<a href="/<%= systemConfigs.prefixAdmin%>/themes/delete/<%= item.id%>" class="rounded-circle btn btn-sm btn-danger" title="Delete">
											<i class="fas fa-trash-alt"></i>
										</a>
									</td>
								</tr>
							<% }) %>
                        </tbody>
                    </table>
                </form>
            </div>
            <%- paginationHelper(pagination, 'themes', currentStatus, keyword)%>
        </div>
    </div>
</section>