<% include ./../../helper/category-pagination%>
<% include ./../../helper/format-time%>


<%
const uploadPath = '/uploads/article/'

const url = `/${systemConfigs.prefixNews}/` ;

const cleanedURL = url.replace(/\/+/g, '/');

%>

<!DOCTYPE html>
<html lang="en">

<body class="animsition">

	<!-- Breadcrumb -->
	<div class="container">
		<div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
			<% include ./../../elements/breadcrumb%>
			<% include ./../../elements/search%>
		</div>
	</div>
	<!-- Page heading -->
	<% include ./../../elements/page-heading%>

		
	<!-- Feature post -->
	<section class="bg0">
		<div class="container">
			<div class="row m-rl--1">
				<div class="col-md-6 p-rl-1 p-b-2">
					<div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url('<%=uploadPath + itemsSpecialCategory[0].thumb%>');">
						<a href="<%=cleanedURL%>blog-detail/<%= itemsSpecialCategory[0].id%>" class="dis-block how1-child1 trans-03"></a>

						<div class="flex-col-e-s s-full p-rl-25 p-tb-20">
							<a href="<%=cleanedURL%>category/<%= itemsSpecialCategory[0].category.id%>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
								<%= itemsSpecialCategory[0].category.name%>
							</a>

							<h3 class="how1-child2 m-t-14 m-b-10">
								<a href="<%=cleanedURL%>blog-detail/<%= itemsSpecialCategory[0].id%>" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
									<%= itemsSpecialCategory[0].name%>
								</a>
							</h3>

							<span class="how1-child2">
								<span class="f1-s-4 cl11">
									<%= itemsSpecialCategory[0].created.user_name%>
								</span>

								<span class="f1-s-3 cl11 m-rl-3">
									-
								</span>

								<span class="f1-s-3 cl11">
                                    <%- formatTimeHelper (itemsSpecialCategory[0].created.time) %>
								</span>
							</span>
						</div>
					</div>
				</div>

				<div class="col-md-6 p-rl-1">
					<div class="row m-rl--1">
						<% for (let i = 1; i < itemsSpecialCategory.length; i++) { %>
						<div class="col-sm-6 p-rl-1 p-b-2">
							<div class="bg-img1 size-a-14 how1 pos-relative" style="background-image: url('<%=uploadPath + itemsSpecialCategory[i].thumb%>');">
								<a href="<%=cleanedURL%>blog-detail/<%= itemsSpecialCategory[i].id%>" class="dis-block how1-child1 trans-03"></a>

								<div class="flex-col-e-s s-full p-rl-25 p-tb-20">
									<a href="<%=cleanedURL%>category/<%= itemsSpecialCategory[i].category.id%>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
										<%= itemsSpecialCategory[i].category.name%>
									</a>

									<h3 class="how1-child2 m-t-14">
										<a href="<%=cleanedURL%>blog-detail/<%= itemsSpecialCategory[i].id%>" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
											<%= itemsSpecialCategory[i].name%>
										</a>
									</h3>
								</div>
							</div>
						</div>
						<% } %>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Post -->
	<section class="bg0 p-t-70 p-b-55">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-10 col-lg-8 p-b-80">
					<div class="row">
							<% itemsInCategory.forEach((item, index) => { %>	
							<div class="col-sm-6 p-r-25 p-r-15-sr991">
								<!-- Item latest -->	
								<div class="m-b-45">
									<a href="<%=cleanedURL%>blog-detail/<%= item.id%>" class="wrap-pic-w hov1 trans-03">
										<img src="<%= uploadPath + item.thumb%>" alt="<%= item.name%>">
									</a>
							
									<div class="p-t-16">
										<h5 class="p-b-5">
											<a href="<%=cleanedURL%>blog-detail/<%= item.id%>" class="f1-m-3 cl2 hov-cl10 trans-03">
												<%= item.name%> 
											</a>
										</h5>
							
										<span class="cl8">
											<a href="<%=cleanedURL%>blog-detail/<%= item.id%>" class="f1-s-4 cl8 hov-cl10 trans-03">
												<%= item.created.user_name%>
											</a>
							
											<span class="f1-s-3 m-rl-3">
												-
											</span>
							
											<span class="f1-s-3">
												<%- formatTimeHelper (item.created.time) %>
											</span>
										</span>
									</div>
								</div>
							</div>
							<% }) %>					
					</div>
					<!-- Pagination -->
					<%- categoryPaginationHelper(cleanedURL, totalPages, idCategory, paginationCatgoryPage) %>
				</div>

				<div class="col-md-10 col-lg-4 p-b-80">
					<div class="p-l-10 p-rl-0-sr991">							
						<!-- Subscribe -->
						<% include ./../../elements/subscribe%>

						<!-- Most Popular -->
						<% include ./../../elements/most-popular%>

						<!--  -->
						<% include ./../../elements/sidebar-banner%>
						
						<!-- Tag -->
						<% include ./../../elements/tag%>
					</div>
				</div>
			</div>
		</div>
	</section>	

</body>
</html>