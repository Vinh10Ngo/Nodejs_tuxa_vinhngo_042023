<% include ./../../helper/status-filter%>
<% include ./../../helper/action%>
<% include ./../../helper/status%>
<% include ./../../helper/hightlight%>
<% include ./../../helper/pagination%>
<% include ./../../helper/source_by%>
<% include ./../../helper/sort%>
<% include ./../../helper/checkAll%>
<% include ./../../helper/checkBox%>
<% include ./../../helper/controls%>
<% include ./../../helper/selectBox%>
<% include ./../../helper/selectBoxAjaxCategory %>
<% include ./../../helper/image %>
<% include ./../../helper/special%>  


<% include ./../../elements/flash%>

<%
const linkPrefix = systemConfigs.prefixAdmin + `/${controllerName}/`
const uploadPath = 'uploads/article/'

let elementsControl = [
{collection: 'form', class: "rounded-circle btn btn-sm btn-info", icon: "fas fa-pencil-alt", title: "Edit"},
{collection: 'delete', class: "rounded-circle btn btn-sm btn-danger delete", icon: "fas fa-trash-alt", title: "Delete"}
]
%>

<section class="content">
    <div class="container-fluid">
        <!-- Search & Filter -->
        <div class="card card-info card-outline">
            <div class="card-header">
                <h6 class="card-title">Search &amp; Filter</h6>
                <div class="card-tools">
                    <a href="/<%= linkPrefix%>all" class="btn btn-tool"><i class="fas fa-sync"></i></a>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-between">
                    <div class="mb-1">
                    </div>
                    <div class="mb-1">
                        <!-- Category Selectbox -->
                    </div>
                    
                    <div class="mb-1">
                        <form action="/<%= linkPrefix%><%=params.currentStatus%>">
                            <div class="input-group">
                                <input type="text" class="form-co  ntrol form-control-sm" name="keyword" value="<%= params.keyword%>" style="min-width: 300px">
                                <div class="input-group-append">
                                    <a href="/<%= linkPrefix%>all"><button type="button" class="btn btn-sm btn-danger" id="btn-clear-search">Clear</button></a>
                                    <button type="submit" class="btn btn-sm btn-info" id="btn-search"> Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- List -->
        <div class="card card-info card-outline">
            <div class="card-header">
                <h4 class="card-title">List</h4>
                <div class="card-tools">
                    
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
               
                <!-- List Content -->
                <form action="" method="post" class="table-responsive" id="zt-form">

                     <!-- Control -->
                     <%- actionHelper(linkPrefix) %> 
                    <table class="table table-bordered table-hover text-nowrap btn-table mb-0">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    <%- CheckAllHelper() %>
                                </th>
                                <th class="text-center">ID</th>
                                <%- sortHelper(linkPrefix, 'Title', 'title', params.sortField, params.sortType, 'width:20%') %>
                                <%- sortHelper(linkPrefix, 'Link', 'link', params.sortField, params.sortType, 'width:20%') %>
                                <%- sortHelper(linkPrefix, 'Thumb', 'thumb', params.sortField, params.sortType, 'width:20%') %>
                                <%- sortHelper(linkPrefix, 'Publish Date', 'pubDate', params.sortField, params.sortType, 'width:20%') %>
                                <%- sortHelper(linkPrefix, 'Guid', 'guid', params.sortField, params.sortType, 'width:20%') %>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(articleRssFilterArr.length > 0) { %>
							<% articleRssFilterArr.forEach((item, index) => { %>	
								<tr>
									<td class="text-center">
										<%- CheckBoxHelper(item.guid)%>
									</td>
									<td class="text-center"><%= index +1 %></td>
									<td class="text-wrap" style="min-width: 180px"><%- hightlightHelper(item.title, params.keyword) %></td>
                                    
                                    <td class="text-wrap" style="min-width: 180px"><%= item.link%></td>
                                    <td class="text-wrap" style="min-width: 100px"><img id="image_preview" src="<%= item.thumb%>" alt="${alt}" width="${width}" height="${height}">
                                        </td>
                                    <td class="text-wrap" style="min-width: 180px"><%= item.pubDate%></td>
                                    <td class="text-wrap" style="min-width: 180px"><%= item.guid%></td>
                                    
									<td class="text-center">
                                       <%- ControlsHelper(elementsControl, linkPrefix, item.id)%>
									</td>
								</tr>
							<% }) %>
                                <% } else { %>
                                    <tr><td colspan="12"><h3>Không có dữ liệu</h3></td></tr>
                                    <% } %>         
                                        
                        </tbody>
                    </table>
                </form>
            </div>
            <%- paginationHelper(params.pagination, linkPrefix, params.currentStatus, params.keyword)%>
        </div>
    </div>
</section>