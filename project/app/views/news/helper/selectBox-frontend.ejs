<!-- optionSelected: truyền vào id của phần tử được chọn -->
<% selectBoxFrontendHelper = (name, items, optionSelected = '', idSelect) => {
    let xHtmlResult = ''
    
    items.forEach((item) => {
        <!-- phần tử được đổ ra phần tử nào có id = optionSelected thì được chọn -->
        let selected = (optionSelected == item.id) ? 'selected = "selected"': ''        
         let id = (item.id == undefined) ? 'allBlog' : item.id
        xHtmlResult += `<option value=${id} ${selected}>${item.name}</option>`
    })  
    return `<select id="${idSelect}" name=${name} class="custom-select custom-select-sm">${xHtmlResult}
    </select>`
}    
%>

